.control-page
	.head-block
		background-image url(../../static/img/content/control-bg.png)
	.js-slider
		width 777px


.service-items
	display flex
	flex-direction column
	align-items center
	.btn-action
		font-size 24px
		text-align center
		color #000000
		&:before
			background-color #000000
		&:hover
			color actionColor
			&:before
				background-color actionColor

.service-item
	display flex
	margin-bottom 60px
	border-radius 5px
	overflow hidden
	.btn
		color titleColor
		&:hover
			color #ffffff

.service-item__img
	width 41%
	img
		width 100%

.service-item__content
	display flex
	flex-direction column
	align-items flex-start
	justify-content space-between
	width 59%
	padding 60px
	background-color actionColor
	color #ffffff

.service-item__text
	display flex
	justify-content space-between
	width 100%

.service-item__price
	font-size 25px

.service-item__price-title
	margin-right 20px
	font-family boldFont

.service-item__descr
	font-size 15px


.stages-items
	display flex
	justify-content space-between

.stages-item
	display flex
	flex-direction column
	align-items center
	width 19%

.stages-item__count
	position relative
	width 100%
	padding-bottom 30px
	text-align center
	font-size 64px
	font-family boldFont
	line-height 78px
	color titleColor
	&:after
		content ''
		position absolute
		bottom 0
		left 0
		width 100%
		height 3px
		background-color titleColor
		border-radius 1px

.stages-item__title
	margin 30px 0
	font-family boldFont

.stages-item__descr
	max-width 282px
	text-align center
