.staff-page
	.head-block__content
		height auto

.staff
	margin 60px 0 100px

.staff-items
	padding 60px
	background-color grayBgColor

.staff-items__block
	display flex
	flex-wrap wrap
	justify-content space-between
	margin-bottom 60px
	&:last-child
		margin-bottom 0

.staff-item
	width 23.5%
	font-size 16px

.staff-item__img
	display flex
	align-items flex-end
	justify-content center
	width 100%
	height 380px
	background linear-gradient(93.58deg, #1A777E 0%, #1A98A6 99.22%)
	border-radius 10px
	overflow hidden

.staff-item__name
	margin-top 30px
	font-family Montserrat-Bold, sans-serif
	color titleColor

.staff-item__proffession
	margin 20px 0
	color actionColor
	

@media screen and (max-width 1240px)
	.staff-items__block
		.staff-item
			&:last-child
				margin-bottom 0
	.staff-item
		width 45%
		margin-bottom 60px

@media screen and (max-width 768px)
	.staff-items__block
		justify-content center
	.staff-item
		width 100%

@media screen and (max-width 710px)
	.staff-page .head-block__content
		padding-top 116px

@media screen and (max-width 480px)
	.section-items
		padding 30px
	.staff-item
		font-size 14px
	.staff-item__img
		img
			width 80%

@media screen and (max-width 375px)
	.staff-item__img
		height 65%

@media screen and (max-width 320px)
	.staff-item__img
		height 55%