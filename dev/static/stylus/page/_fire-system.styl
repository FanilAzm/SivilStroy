.fire-page
	.head-block
		background-image url(../../static/img/content/fire-bg.png)
	.h3
		max-width 100%

.engineering-items
	display flex

.engineering-item
	display flex
	justify-content space-between

.engineering-item__img
	width 49%
	border-radius 5px
	img
		width 100%

.engineering-item__content
	display flex
	flex-direction column
	justify-content space-between
	align-items flex-start
	width 49%
	padding 60px 30px
	border-radius 5px
	background-color titleColor
	color #ffffff
	.btn
		width 292px
	.btn_white
		font-size 16px
		color titleColor
		&:hover
			border-color #fff
			color #ffffff

.engineering-item__content_white
	background-color grayBgColor
	color mainTextColor

.engineering-item__services
	display flex
	justify-content space-between
	width 100%

.engineering-item__service-title
	max-width 100px
	margin-top 25px
	font-family boldFont

.engineering-item__descr
	font-size 15px


.documents-item
	display flex
	justify-content space-between

.documents-item__content
	display flex
	flex-direction column
	align-items flex-start
	width 60%
	.btn
		width 390px

.documents-item__img
	position relative
	width 383px

.documents-item__img_rotate
	width 270px
	position absolute
	top 60px
	left 67%
	transform rotate(30deg)
	z-index -1

.documents-item__text
	margin 15px 0 60px

.documents-item__descr
	margin-bottom 30px
	&:last-child
		margin-bottom 0

