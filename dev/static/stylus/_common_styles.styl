.h1
	font-size 64px
	font-family boldFont
	line-height 80px
	background linear-gradient(92.94deg, #1A777E 0%, #1A98A6 100%)
	-webkit-background-clip text
	color transparent

.h3
	max-width 687px
	font-size 36px
	font-family boldFont
	color titleColor

.h4
	font-size 24px
	font-family boldFont
	line-height 29px

.h5
	font-size 18px
	font-family boldFont
	line-height 27px

.section-descr
	width 612px
	margin-top 62px

.section-margin
	margin 100px 0

.slick-slide
	margin-left 15px
	margin-right 15px
.slick-list
	margin-left -15px
	width calc(100% + 30px)

.section-slider
	.slick-dots
		position absolute
		bottom -89px
		left 0
		li 
			background-color rgba(0, 0, 0, 0.15)
			&.slick-active
				background-color actionColor

.section-slider__next,
.section-slider__prev
	position absolute
	bottom 0
	cursor pointer
	z-index 5
	svg
		background-color transparent
	&:hover
		svg
			fill #fff

.section-slider__prev
	left 440px

.section-slider__next
	right 440px
	
.btn
	height 60px
	line-height 50px
	min-width 240px
	border none
	background-color mainColor
	color #ffffff
	font-family boldFont
	&:hover
		background-color #fff
		color titleColor

.btn_border
	border 1px solid #ffffff
	&:hover
		border-color #fff
		background-color #fff
		color titleColor

.btn_transparent
	background-color transparent
	color titleColor
	border 1px solid titleColor
	&:hover
		border-color titleColor
		background-color titleColor
		color #fff

.btn_white
	font-size 18px
	background-color #fff
	color blackColor
	&:hover
		border-color titleColor
		background-color titleColor
		color #fff


	
	
