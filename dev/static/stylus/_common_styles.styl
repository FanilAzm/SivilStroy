.h1
	font-size 64px
	font-family boldFont
	line-height 80px
	background linear-gradient(92.94deg, #1A777E 0%, #1A98A6 100%)
	-webkit-background-clip text
	color transparent

.h3
	max-width 687px
	font-size 36px
	font-family boldFont
	color titleColor

.h4
	font-size 24px
	font-family boldFont
	line-height 29px

.h5
	font-size 18px
	font-family boldFont
	line-height 27px

.section-descr
	width 612px
	margin-top 62px

.section-margin
	margin 100px 0

.section-items
	margin-top 60px

.slick-slide
	margin-left 15px
	margin-right 15px
.slick-list
	margin-left -15px
	width calc(100% + 30px)

.section-slider
	.slick-dots
		position absolute
		bottom -89px
		left 0
		li 
			background-color rgba(0, 0, 0, 0.15)
			&.slick-active
				background-color actionColor

.slick-dots
	display flex
	align-items center
	justify-content center
	li
		width 100px
		height 5px
		margin 0 16px
		border-radius 1px
		background-color #fff
		&.slick-active
			height 10px
			border-radius 3px
			background-color actionColor
		button
			width 100%
			height 100%
			&:before
				content none
				padding 0
				margin 0

.section-slider__next,
.section-slider__prev
	position absolute
	bottom 0
	width 50px
	height 50px
	border 1px solid rgba(0,0,0,0.15)
	border-radius 3px
	cursor pointer
	z-index 5
	svg
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		width 20px
		height 30px
		background-color transparent
		fill rgba(0,0,0,0.15)
	&:hover
		background-color #fff
		border 1px solid #000000
		svg
			fill #000000

.section-slider__prev
	left 29%

.section-slider__next
	right 29%
	
.btn
	height 60px
	line-height 50px
	min-width 240px
	border none
	background-color mainColor
	color #ffffff
	font-family boldFont
	&:hover
		background-color #fff
		color titleColor

.btn_border
	border 1px solid #ffffff
	&:hover
		border-color #fff
		background-color #fff
		color titleColor

.btn_transparent
	background-color transparent
	color titleColor
	border 1px solid titleColor
	&:hover
		border-color titleColor
		background-color titleColor
		color #fff

.btn_white
	font-size 18px
	background-color #fff
	color blackColor
	&:hover
		border-color titleColor
		background-color titleColor
		color #fff

.btn-mobile
	display none

.select
	position relative
	display block
	width 100%
	height 60px
.new-select 
	position relative
	border 1px solid mainColor
	border-radius 5px
	background-color #fff
	padding 20px
	cursor pointer
	user-select none
	&:after 
		content ''
		position absolute
		top 26px
		right 28px
		sprite($s-select-arrow)
		z-index 5
		-webkit-transition all .27s ease-in-out
		-o-transition all .27s ease-in-out
		transition all .27s ease-in-out
		-webkit-transform rotate(0deg)
		-ms-transform rotate(0deg)
		-o-transform rotate(0deg)
		transform rotate(0deg)
	&.on
		z-index 3
		&:after 
			-webkit-transform rotate(180deg)
			-ms-transform rotate(180deg)
			-o-transform rotate(180deg)
			transform rotate(180deg)
.new-select__list 
	position absolute
	top 63px
	left 0
	border 1px solid mainColor
	border-radius 0 0 5px 5px
	cursor pointer
	width 100%
	z-index 2
	background #fff
	user-select none
	&.on
		display block
.new-select__item 
	border-bottom 1px solid rgba(0, 0, 0, 0.25)
	span 
		display block
		padding 15px
		&:hover 
			color mainColor
	&:last-child
		border none



	
	
